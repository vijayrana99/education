            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login"]
            },
            "description": "Authenticate and get JWT token. Token is automatically saved to collection variables after successful login.",
            "response": [],
            "event": [
              {
                "listen": "test",
                "script": {
                  "type": "text/javascript",
                  "exec": [
                    "// Parse the JSON response",
                    "var jsonData = pm.response.json();",
                    "",
                    "// Save the token to collection variables",
                    "pm.collectionVariables.set(\"token\", jsonData.token);",
                    "",
                    "// Log for debugging",
                    "console.log(\"Token saved:\", jsonData.token);",
                    "",
                    "// Add tests",
                    "pm.test(\"Status code is 200\", function () {",
                    "    pm.response.to.have.status(200);",
                    "});",
                    "",
                    "pm.test(\"Token exists in response\", function () {",
                    "    pm.expect(jsonData).to.have.property('token');",
                    "});",
                    "",
                    "pm.test(\"Token saved to collection variables\", function () {",
                    "    pm.expect(pm.collectionVariables.get('token')).to.exist;",
                    "});"
                  ]
                }
              }
            ]
          },
